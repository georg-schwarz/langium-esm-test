{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "target": "ES2015",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@org/dep-a": ["dep-a/src/index.ts"],
      "@org/dep-b": ["dep-b/src/index.ts"],
      "@org/langium-commonjs": ["langium-commonjs/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
